{
  "manifest_version": 2,

  "name": "Orbit Newtab",
  "short_name": "Orbit",
  "description": "Give a clean and modern look to your default Chrome homepage",
  "version": "1.6.8",
  "chrome_url_overrides": {
    "newtab": "orbit-elite/index.html"
  },
  "icons": {
    "128": "icon.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": ["activeTab", "storage", "geolocation"],
  "content_security_policy": "script-src 'self' https://rss.bloople.net; "
}